@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h1> Yetenek Güncellem Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="SkillId" />
    <label>Yetenek Başlığı</label>
    <input type="text" asp-for="SkillName" class="form-control" />
    <br />

    <label>Yetenek Değeri</label>
    <input type="number" asp-for="SkillValue" class="form-control" />
    <br />
    <button class="btn btn-success">Yeteneği Güncelle</button>
</form>
